- model_class = Task
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:owner_id)
      %th= model_class.human_attribute_name(:performer_id)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.owner.email
        %td= task.performer.email
        %td= task.state
        %td= link_to task.title, task_path(task)
        %td= task.description
        %td=l task.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_task_path(task), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), task_path(task), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
          - task.state_events.each do |e|
            = link_to e.capitalize, task_path(task, task: {state_event: e}), class: "btn btn-mini btn-success", method: :put

= link_to t('.new', :default => t("helpers.links.new")), new_task_path, :class => 'btn btn-primary'
